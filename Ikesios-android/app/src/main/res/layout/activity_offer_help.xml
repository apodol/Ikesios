<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferHelp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="328dp"
        android:layout_height="74dp"
        android:text="Τι βοήθεια θα μπορούσατε να δώσετε;"
        android:textSize="25sp"
        android:textColor="@color/primaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <RadioGroup

        android:id="@+id/groupradio12"
        android:layout_width="329dp"
        android:layout_height="302dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/offerhelp_psonia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Βοήθεια με τα ψώνια(φαρμακείο,supermarket,κλπ)"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

        <RadioButton
            android:id="@+id/offerhelp_spiti"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Βοήθεια στο σπίτι(καθαρισμός,τακτοποίηση,μεταφορές επιπλων, κλπ)"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

        <RadioButton
            android:id="@+id/offerhelp_texnologiko"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Βοήθεια σε κάτι τεχνολογικό(internet,υπολογιστής,κάμερα, κλπ)"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

        <RadioButton
            android:id="@+id/offerhelp_miliso"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Κάποιον να μιλήσω,τηλεφωνικά ή μέσω internet"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

        <RadioButton
            android:id="@+id/offerhelp_iatriki"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ιατρική βοήθεια"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

        <RadioButton
            android:id="@+id/offerhelp_alli"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Άλλο"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

    </RadioGroup>

    <Button
        android:id="@+id/offerhelp_submit"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="228dp"
        android:layout_height="83dp"
        android:layout_marginBottom="120dp"
        android:text="υποβολη"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupradio12"
        app:layout_constraintVertical_bias="0.19999999"
        app:rippleColor="@color/primaryDark"
        app:strokeColor="@color/colorPrimary" />


</androidx.constraintlayout.widget.ConstraintLayout>